<html lang="es">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"
    />
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">TheIsert</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarColor02"
          aria-controls="navbarColor02"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor02">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Inicio
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/#fun">Funciones</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/votar">Votar</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/comandos">Comandos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/actualizaciones">Actualizaciones</a>
            </li>
            <li class="nav-item">
              {{#if user}}
                <div class="dropdown">
                  <a
                    class="btn btn-outline-secondary dropdown-toggle"
                    href="#"
                    role="button"
                    id="dropdownMenuLink"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                  >

                    <img
                      src="https://cdn.discordapp.com/avatars/{{userDjs.id}}/{{userDjs.avatar}}.png"
                      class="rounded-circle me-1"
                      width="27px"
                      height="27px"
                    />
                    {{user.username}}
                  </a>

                  <ul
                    class="dropdown-menu dropdown-menu-end mt-2"
                    aria-labelledby="dropdownMenuLink"
                  >
                    <li><a class="dropdown-item" href="/dash"><i
                          class="bi bi-house-door-fill"
                        ></i>
                        Ir a la Dashboard</a></li>
                    <li><a class="dropdown-item" href="/dash/logout"><i
                          class="bi bi-arrow-bar-right"
                        ></i>
                        Cerrar sesión</a></li>

                  </ul>
                </div>
              {{else}}
                <a href="/login" class="btn btn-outline-secondary"><i
                    class="bi bi-arrow-bar-right"
                  ></i>
                  Iniciar sesión</a>
              {{/if}}
            </li>
            </li>
          </ul>
        </div>

      </div>
    </nav>
    <!---..............................................................-->
    <div class="jumbotron text-center bg-dark p-4">
      <img
        src="https://i.imgur.com/ARInGZf.png"
        class="rounded-circle mx-auto d-block"
        width="120px"
        height="120px"
      />
      <h1 class="display-5">Votar</h1>
      <p class="p-1 h5 text-white-50">Votar por TheIsert</p>
    </div>
    <!---..............................................................-->
    <div class="container position relative p-3">
      <div class="card rounded-3 mx-auto " style="width: 70rem">

        <div class="row">

          <div class="col-sm-4 my-5 ms-5">
            <div class="stat-card" style="height: 8rem;width: 17rem">
              <div class="stat-card__content">
                <p class="text-uppercase mb-1 text-muted">Top.gg</p>
                <a href="https://top.gg/bot/901525558725333002/vote"><button
                    class="btn btn-primary"
                  >Votar</button></a>
              </div>
              <div class="stat-card__icon stat-card__icon--success">
                <div class="stat-card__icon-circle">
                  <i class="bi bi-bar-chart-fill"></i>
                </div>
              </div>
            </div>
          </div>

          <div class="col-sm-4 my-5 ms-5">
            <div class="stat-card" style="height: 8rem;width: 17rem">
              <div class="stat-card__content">
                <p class="text-uppercase mb-1 text-muted">Voidbots.net</p>
                <a
                  href="https://voidbots.net/bot/901525558725333002/vote"
                ><button class="btn btn-primary">Votar</button></a>
              </div>
              <div class="stat-card__icon stat-card__icon--success">
                <div class="stat-card__icon-circle">
                  <i class="bi bi-bar-chart-fill"></i>
                </div>
              </div>
            </div>
          </div>

          <div class="col-sm-4 my-5 ms-5">
            <div class="stat-card" style="height: 8rem;width: 17rem">
              <div class="stat-card__content">
                <p class="text-uppercase mb-1 text-muted">discordthings.com</p>
                <a
                  href="https://discordthings.com/bot/901525558725333002/vote"
                ><button class="btn btn-primary">Votar</button></a>
              </div>
              <div class="stat-card__icon stat-card__icon--success">
                <div class="stat-card__icon-circle">
                  <i class="bi bi-bar-chart-fill"></i>
                </div>
              </div>
            </div>
          </div>

 <div class="col-sm-4 my-5 ms-5">
            <div class="stat-card" style="height: 8rem;width: 17rem">
              <div class="stat-card__content">
                <p class="text-uppercase mb-1 text-muted">Discord Bot List</p>
                <a
                  href="https://discordbotlist.com/bots/theisert/upvote"
                ><button class="btn btn-primary">Votar</button></a>
              </div>
              <div class="stat-card__icon stat-card__icon--success">
                <div class="stat-card__icon-circle">
                  <i class="bi bi-bar-chart-fill"></i>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
    integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
    integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
    crossorigin="anonymous"
  ></script>

</html>