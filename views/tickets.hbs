<html lang="es">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"
    />
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">TheIsert</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarColor02"
          aria-controls="navbarColor02"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor02">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Inicio
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/#fun">Funciones</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/votar">Votar</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/comandos">Comandos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/actualizaciones">Actualizaciones</a>
            </li>
            <li class="nav-item">
              <div class="dropdown">
                <a
                  class="btn btn-outline-secondary dropdown-toggle"
                  href="#"
                  role="button"
                  id="dropdownMenuLink"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >

                  <img
                    src="https://cdn.discordapp.com/avatars/{{userDjs.id}}/{{userDjs.avatar}}.png"
                    class="rounded-circle me-1"
                    width="27px"
                    height="27px"
                  />
                  {{user.username}}
                </a>

                <ul
                  class="dropdown-menu dropdown-menu-end mt-2"
                  aria-labelledby="dropdownMenuLink"
                >
                  <li><a class="dropdown-item" href="/"><i
                        class="bi bi-house-door-fill"
                      ></i>
                      Inicio</a></li>
                  <li><a class="dropdown-item" href="/dash/logout"><i
                        class="bi bi-arrow-bar-right"
                      ></i>
                      Cerrar sesión</a></li>

                </ul>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!---.............................................................................................-->

    <div class="jumbotron text-center bg-dark p-4">
      {{#if servidor.icon}}
        <img
          src="https://cdn.discordapp.com/icons/{{servidor.id}}/{{servidor.icon}}.png"
          class="rounded-circle mx-auto d-block"
          width="90px"
          height="90px"
        />
      {{else}}
        <img
          src="https://i.imgur.com/fLjsfaC-png"
          class="position-absolute top-50 start-50 translate-middle my-auto rounded-circle"
          width="90px"
          height="90px"
        />
      {{/if}}
      <h1 class="display-5">{{servidor.name}}</h1>
      <p class="p-1 h5 text-white-50">Configuración del Sistema de Tickets</p>
    </div>

    <!---.............................................................................................-->
    <div class="container p-3">
      <div class="row">
        <div class="card rounded-3 mx-auto d-block" style="width: 70rem">
          <div class="col pt-3 ms-3">
            <i class="bi bi-ticket-detailed-fill text-info d-inline h3"></i>
            <h3 class="d-inline px-2">Tickets</h3>
            <div class="dropdown float-end">
              <button
                class="btn btn-outline-secondary dropdown-toggle me-2"
                type="button"
                id="dropdownMenuButton1"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                {{#if servidor.icon}}
                  <img
                    src="https://cdn.discordapp.com/icons/{{servidor.id}}/{{servidor.icon}}.png"
                    class="rounded-circle"
                    width="27px"
                    height="27px"
                  />
                {{else}}
                  <img
                    src="https://i.imgur.com/fLjsfaC-png"
                    class="position-absolute top-50 start-50 translate-middle my-auto rounded-circle"
                    width="27px"
                    height="27px"
                  />
                {{/if}}
                {{servidor.name}}
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                {{#each servidores}}
                  <li><a class="dropdown-item" href="/dash/{{this.id}}">{{#if
                        this.icon
                      }}
                        <img
                          src="https://cdn.discordapp.com/icons/{{this.id}}/{{this.icon}}.png"
                          class="rounded-circle"
                          width="27px"
                          height="27px"
                        />
                      {{else}}
                        <img
                          src="https://i.imgur.com/s4GdL1c.png"
                          class="rounded-circle"
                          width="27px"
                          height="27px"
                        />
                      {{/if}}
                      {{this.name}}</a></li>
                {{/each}}
              </ul>
            </div>
          </div>

          <hr class="my-4" />

          <div class="col">
            <h4 class="text-end mt-3 mb-1 me-5">Vista previa del mensaje del
              ticket</h4>
            <img
              src="https://i.imgur.com/jePoEQs.png"
              class="img-fluid rounded-3 float-end me-2"
              width="480px"
              height="700px"
            />

            <form
              action="http://localhost:3000/dash/{{servidorID}}/ticket"
              class="needs-validation"
              onsubmit="myFunction()"
              method="post"
              novalidate
            >

              <h4 class="text-start mt-3 ms-4 mb-1">Canal de crear ticket</h4>
              <p class="text-white-50 text-start ms-4 mt-1 mb-1">Canal donde se
                enviará el mensaje para crear un Ticket.
                <span class="badge bg-dark">Obligatorio</span></p>

              <select
                class="form-select bg-dark text-white w-50 ms-4 mt-2 rounded-3"
                aria-label="Default select example"
                id="crearticket"
                name="crearticket"
                required
              >
                <option
                  selected
                  disabled
                  value=""
                >{{channelNameTickets}}</option>
                {{#each canales}}
                  <option value="{{id}}">{{name}}</option>
                {{/each}}
              </select>

              <h4 class="text-start mt-3 ms-4 mb-1">Rol de soporte</h4>
              <p class="text-white-50 text-start ms-4 mt-1 mb-1">Este es el rol
                que tendrá permisos para reaccionar al Ticket creado.
                <span class="badge bg-dark">Obligatorio</span>
              </p>

              <select
                class="form-select bg-dark text-white ms-4 rounded-3 w-50 mt-2 mb-1"
                aria-label="Default select example"
                id="rolSoporte"
                name="rolSoporte"
                required
              >
                <option selected disabled value="">{{rolNameSoporte}}</option>
                {{#each roles}}
                  <option value="{{name}}">{{name}}</option>
                {{/each}}
              </select>

              <hr class="my-5" />

              <h4 class="text-end mt-3 ms-4 mb-1">Canal de logs</h4>
              <p class="text-white-50 text-end ms-4 mt-1 mb-1">Canal donde se
                enviará un mensaje al cerrar un ticket.
                <span class="badge bg-dark">Opcional</span>
              </p>

              <select
                class="form-select bg-dark text-white w-50 ms-auto mt-2 rounded-3"
                aria-label="Default select example"
                id="channelLogs"
                name="channelLogs"
              >
                <option selected disabled value="">{{channelNameLogs}}</option>
                {{#each canales}}
                  <option value="{{id}}">{{name}}</option>
                {{/each}}
              </select>

              <h4 class="mt-3 mb-1 ms-4">Vista previa del log</h4>
              <img
                src="https://i.imgur.com/Ppld6s6.png"
                class="img-fluid rounded-3 ms-4"
                width="480px"
                height="700px"
              />

              <hr class="mt-5" />

              <div class="text-center mb-3">
                <button
                  class="btn btn-outline-secondary"
                  type="submit"
                >Guardar</button>
                <button
                  class="btn btn-outline-danger"
                  type="reset"
                >Cancelar</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
  <!---.............................................................................................-->
  <script
    src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
    integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
    integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
    crossorigin="anonymous"
  ></script>
  <script>
    (function () { 'use strict' var forms =
    document.querySelectorAll('.needs-validation')
    Array.prototype.slice.call(forms) .forEach(function (form) {
    form.addEventListener('submit', function (event) { if
    (!form.checkValidity()) { event.preventDefault() event.stopPropagation() }
    form.classList.add('was-validated') }, false) }) })()
  </script>

  <script>
    function myFunction() {
    {{message}}
    }
  </script>

</html>