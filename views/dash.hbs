    <!---.......................................................-->
    <div class="jumbotron text-center bg-dark p-4">
      <img
        src="https://i.imgur.com/ARInGZf.png"
        class="rounded-circle mx-auto d-block"
        width="120px"
        height="120px"
      />
      <h1 class="display-5">Administrar servidores</h1>
      <p class="p-1 h5 text-white-50">Lista de servidores en los que eres
        administrador</p>
    </div>
    <!---.......................................................-->
    <div class="container">
      <div class="row row-cols-1 row-cols-md-3 my-3">
        {{#each servidores}}
          <div class="col my-3">
            <div class="card text-center">
              <div class="card-body">
                {{#if this.icon}}
                  <img
                    src="https://cdn.discordapp.com/icons/{{this.id}}/{{this.icon}}.png"
                    class="card-img blur"
                    width="100px"
                    height="300px"
                  />
                {{else}}
                  <img
                    src="https://i.imgur.com/aO6NA4x.jpg"
                    class="card-img blur"
                    width="100px"
                    height="300px"
                  />
                {{/if}}
                <div class="card-img-overlay">
                  {{#if this.icon}}
                    <img
                      src="https://cdn.discordapp.com/icons/{{this.id}}/{{this.icon}}.png"
                      class="position-absolute top-50 start-50 translate-middle my-auto rounded-circle"
                      width="80px"
                      height="80px"
                    />
                  {{else}}
                    <img
                      src="https://i.imgur.com/aO6NA4x.jpg"
                      class="position-absolute top-50 start-50 translate-middle my-auto rounded-circle"
                      width="80px"
                      height="80px"
                    />
                  {{/if}}
                  <h5
                    class="card-text position-absolute bottom-0 start-50 translate-middle-x mb-4"
                  >{{this.name}}
                    <br />
                    <a
                      href="/dash/{{this.id}}"
                      class="btn btn-secondary"
                    >Configurar</a>
                  </h5>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </body>
